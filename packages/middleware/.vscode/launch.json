{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Smyth Middleware",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "npm: build",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "sourceMaps": true,
            "env": {},
            "outputCapture": "std"
        },
        {
            "type": "node",
            "name": "Run standalone .ts script using node -r esbuild-register",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": ["-r", "esbuild-register"],
            "program": "${file}",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"

        }
    ]
}
