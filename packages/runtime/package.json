{
  "name": "runtime-server",
  "version": "2.0.0",
  "description": "SmythOS Runtime Server (Agent, Debugger, Embodiment)",
  "main": "dist/index.cjs",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development FORMAT=cjs rollup -c && node --enable-source-maps ./dist/index.dev.cjs",
    "build": "cross-env NODE_ENV=production FORMAT=cjs NODE_OPTIONS='--max-old-space-size=3096' rollup -c",
    "start": "cross-env NODE_ENV=production node ./dist/index.cjs",
    "start:prod": "cross-env NODE_ENV=production node ./dist/index.cjs",
    "test": "cross-env TEST_ENV=true vitest --reporter verbose",
    "clean": "rm -rf dist",
    "lint": "eslint --ext .ts src/",
    "lint-fix": "eslint --ext .ts src/ --fix",
    "lint-staged": "lint-staged",
    "ts-error-scan": "tsc --noEmit",
    "prettier:format": "prettier --write \"**/*.ts\"",
    "bump": "pnpm version patch"
  },
  "author": "Alaa-eddine KADDOURI",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/pluginutils": "^5.1.0",
    "@types/compression": "^1.8.1",
    "@types/node": "^22.9.0",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "knip": "^5.61.3",
    "lint-staged": "^13.2.1",
    "nodemon": "^3.0.2",
    "prettier": "^2.8.7",
    "rollup": "^2.79.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript-paths": "^1.5.0",
    "supertest": "^6.3.3",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@smythos/sre": "^1.5.64",
    "axios": "^1.7.7",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "joi": "^17.13.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.72.0",
    "openapi-to-postmanv2": "^4.24.0",
    "pkce-challenge": "^5.0.0",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1"
  },
  "keywords": [],
  "license": "ISC"
}
