# Runtime Server Configuration
PORT=5000
NODE_ENV=DEV

# Server Mode Configuration
# Set to 'agent' for agent mode, 'debugger' for debug mode, 'embodiment' for embodiment mode, or 'unified' for all modes
SERVER_MODE=unified

# Common Configuration
LOGTO_M2M_APP_ID=your_logto_m2m_app_id
LOGTO_M2M_APP_SECRET=your_logto_m2m_app_secret
LOGTO_SERVER=https://your-logto-server.com
LOGTO_API_RESOURCE=https://api.smythos.com
SMYTH_API_BASE_URL=https://api.smythos.com

# AWS Lambda Configuration (for code execution)
AWS_LAMBDA_REGION=us-east-1
AWS_LAMBDA_ACCESS_KEY_ID=your_lambda_access_key
AWS_LAMBDA_SECRET_ACCESS_KEY=your_lambda_secret_key

# Agent Configuration
AGENT_DOMAIN=your-agent-domain.com
AGENT_DOMAIN_PORT=3000
PROD_AGENT_DOMAIN=your-prod-agent-domain.com


# Router Configuration
ROUTER_BASE_URL=https://your-router-base-url.com

# Session Configuration (for embodiment features)
SESSION_SECRET=your_session_secret_key

# CORS Configuration (only needed in production)
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# Proxy Configuration (can be removed after full unification)
SRE_EMBODIMENT_SERVER_URL=http://localhost:3001
LEGACY_SMYTH_SERVER_URL=http://localhost:3002