{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Smyth UI Backend",
            "skipFiles": ["<node_internals>/**"],
            "preLaunchTask": "npm: build:backend",
            "program": "${workspaceFolder}/server/index.js",
            "outFiles": ["${workspaceFolder}/server/**/*.js"],
            "sourceMap": true,
            "outputCapture": "std"
        }
    ]
}