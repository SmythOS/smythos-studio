    <ul class="responsive-table" id="responsiveTable">
        <% if (domains && domains.length > 0) { %>

        <li class="table-header row">
            <div class="cell" data-id="1">Name <img src="/img/domain.icons/arrow-up.svg" alt="" /></div>
            <div class="cell agent flex-justify-center d-flex" data-id="2">
                Agent
                <img class="pl-2" src="/img/domain.icons/arrow-up.svg" alt="" />
            </div>
            <div class="cell agent flex-justify-center d-flex" data-id="3">
                Endpoints <img class="pl-2" src="/img/domain.icons/arrow-up.svg" alt="" />
            </div>
            <div class="cell flex-justify-end d-flex" data-id="4">Actions</div>
        </li>
        <div>
            <div class="verfication d-flex flex-align-center">
                <img src="/img/domain.icons/check-badge.svg" alt="" />
                <span class="pl-1">VERIFIED DOMAINS</span>
            </div>
        </div>

        <% } %> <% if (domains && domains.length > 0) { %> <% domains.forEach(item => { %>
        <div id="domainRow_<%= item.name %>">
            <li class="table-row row">
                <div class="cell d-flex flex-align-center" data-label="Job Id"><%= item?.name %></div>
                <div class="cell d-flex flex-align-center flex-justify-center" data-label="Customer Name">
                    <% if (item && item.aiAgent) { %>
                    <a class="c-pointer agentName" href="/builder/<%= item.aiAgent.id %>" target="_blank">
                        <%= item.aiAgent.name %> </a>
                    <% } else { %>
                    <div>N/A</div>
                    <% } %>
                </div>
                <div class="cell d-flex flex-justify-center flex-align-center flex-column dataApi" id="dataApi"
                    data-label="Amount">
                    <% if (item.aiAgentEndpoint && item.aiAgentEndpoint.length > 0) { %>
                    <% item.aiAgentEndpoint.forEach(data => { %>
                    <div><%= data?.path ? data.path : 'N/A' %></div>
                    <% }); %> <% } else { %>
                    <div>N/A</div>
                    <% } %>
                </div>
                <div class="cell last-col flex-align-start" data-label="Payment Status">
                    <img class="ml-2 c-pointer deleteIcon" id="deleteDomain" src="/img/icons/delete_v2.svg" alt=""
                        data-domain-name="<%= item.name %>" />
                </div>
            </li>
        </div>
        <% }); %> <% } else { %>
        <div class="text-center h5 text-bold pt-10" id="emptyMessage">Click Add domain to register new domain.</div>
        <% } %>
    </ul>
</div>