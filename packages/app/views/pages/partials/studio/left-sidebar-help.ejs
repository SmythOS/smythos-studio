<script>
  function showOverviewTutorial() {
    // Create modal container if it doesn't exist
    let modalContainer = document.getElementById('arcade-modal-container');
    if (!modalContainer) {
      modalContainer = document.createElement('div');
      modalContainer.id = 'arcade-modal-container';
      document.body.appendChild(modalContainer);
    }

    // Create and style the modal overlay
    modalContainer.innerHTML = `
    <div class="fixed inset-0 bg-black bg-opacity-75 z-[99999] flex items-center justify-center"
         onclick="closeOverviewTutorial(event)">
      <div class="relative w-[90%] max-w-[1200px] h-[90vh] bg-white rounded-lg overflow-hidden"
           onclick="event.stopPropagation()">
        <!-- Close button -->
        <button
          onclick="closeOverviewTutorial(event)"
          class="absolute top-3 right-3 z-10 bg-white rounded-full p-2 hover:bg-gray-100 transition-colors"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M18 6 6 18"></path>
            <path d="m6 6 12 12"></path>
          </svg>
        </button>

        <!-- Arcade iframe -->
        <iframe
          src="https://app.arcade.software/xAGgTWEM6EVP57670ikM"
          frameborder="0"
          loading="lazy"
          allowfullscreen
          allow="clipboard-write"
          style="width: 100%; height: 100%; border: none;"
        ></iframe>
      </div>
    </div>
  `;

    // Prevent body scrolling when modal is open
    document.body.style.overflow = 'hidden';
  }

  function closeOverviewTutorial(event) {
    event.preventDefault();
    const modalContainer = document.getElementById('arcade-modal-container');
    if (modalContainer) {
      modalContainer.remove();
      document.body.style.overflow = '';
    }
  }

  // Handle Arcade iframe messages
  window.addEventListener('message', function (e) {
    if (e.origin !== 'https://app.arcade.software') return;

    try {
      const data = typeof e.data === 'string' ? JSON.parse(e.data) : e.data;
      if (data.event === 'arcade-popout-close') {
        closeOverviewTutorial({ preventDefault: () => {} });
      }
    } catch (err) {
      // Ignore parsing errors
    }
  });
</script>
