<div class="flex">
    <a href="#" data-label="<%= label %>"
        class="cpt-item flex w-[100%] space-x-2 text-gray-700 transition-colors rounded-lg group hover:bg-gray-100 hover:text-gray-800"
        smt-component="<%= name %>" <% for (const attr in attributes) { %><%= attr %>="<%= attributes[attr] %>" <% } %>>
        <span aria-hidden="true"
            class="p-2 flex items-center transition-colors rounded-lg group-hover:bg-gray-200 group-hover:text-white">
            <span class="icon "><span class="svg-icon <%= icon %> w-6 h-6"></span></span>
        </span>
        <span class="name align-middle p-2"><%= label %></span>
    </a>
