<script>
  document.addEventListener('DOMContentLoaded', () => {
    const checkAndShowNewYearModal2025 = () => {
      const now = new Date();
      const startDate = new Date('2025-01-09'); // 9 Jan 2025
      const endDate = new Date('2025-01-27'); // 27 Jan 2025

      if (now >= startDate && now <= endDate) {
        const hasSeenModal = localStorage.getItem('newYearModal2025Seen');

        if (!hasSeenModal) {
          const modal = document.getElementById('new-year-modal-2025');
          if (modal) {
            modal.classList.remove('hidden');
            localStorage.setItem('newYearModal2025Seen', 'true');
            posthog?.capture?.('new-year-modal-2025-seen');
          }
        }
      }
    };

    window.closeNewYearModal2025 = () => {
      const modal = document.getElementById('new-year-modal-2025');
      posthog?.capture?.('new-year-modal-2025-closed');
      if (modal) {
        modal.classList.add('hidden');
      }
    };

    setTimeout(checkAndShowNewYearModal2025, 1000);
  });
</script>
