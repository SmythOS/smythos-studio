<div class="flex-shrink-0 p-1 px-4" id="agent-auth-settings" x-data="{ currentAuthTab: 'none' }">
  <p class="text-md font-semibold">Auth Settings (beta)</p>

  <div id="agent-auth-settings-feature-wrapper" class="mt-4 hidden">
    <label for="auth-method" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
      >Select an Auth Method</label
    >
    <select
      id="auth-method"
      x-model="currentAuthTab"
      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
    >
      <option value="none">None</option>
      <option value="api-key-bearer">Bearer API Key</option>
      <!-- <option value="api-key">API Key</option> -->
      <option value="oauth-oidc">OAuth OIDC</option>
    </select>

    <div id="authtab-none" x-show="(currentAuthTab == 'none' || !currentAuthTab)" class="mt-4"></div>
    <div id="authtab-api-key-bearer" x-show="(currentAuthTab == 'api-key-bearer')" class="mt-2">
      <label
        for="auth-bearer-token"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Token <span class="text-red-600">*</span></label
      >
      <input
        type="password"
        id="auth-bearer-token"
        placeholder="MHjp4...Random Token"
        class="mb-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 ph-no-capture"
        required
        value=""
      />

      <label
        for="auth-bearer-openai-verification"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >OpenAI Verification</label
      >
      <input
        type="text"
        id="auth-bearer-openai-verification"
        placeholder="...Verification Token"
        class="mb-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 ph-no-capture"
        required
        value=""
      />
    </div>
    <div id="authtab-oauth-oidc" x-show="(currentAuthTab == 'oauth-oidc')" class="mt-3">
      <div class="mb-2">
        <label
          for="auth-oidc-config-url"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >
          OIDC Config Endpoint <span class="text-red-600">*</span></label
        >
        <input
          type="text"
          id="auth-oidc-config-url"
          placeholder="https://auth.server.com/oicd/.well-known/openid-configuration"
          class="mb-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
          required
          value=""
        />
        <div
          class="mb-4 text-xs font-medium text-red-600 hidden leading"
          id="auth-oidc-config-url-error"
        >
          Please enter a valid URL for OIDC Config.
        </div>
      </div>

      <label for="auth-id" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Client ID <span class="text-red-600">*</span></label
      >
      <input
        type="text"
        id="auth-id"
        placeholder="ID..."
        class="mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        required
        value=""
      />

      <div x-data="{ passwordVisible: false, password: '' }" class="relative mb-2">
        <label
          for="auth-secret"
          class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
          >Client Secret <span class="text-red-600">*</span></label
        >
        <input
          :type="passwordVisible ? 'text' : 'password'"
          x-model="password"
          id="auth-secret"
          placeholder="Secret..."
          class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full px-3 pl-2 pr-9 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
          required
        />
        <div class="absolute inset-y-0 right-0 top-7 pr-1 flex items-center text-sm leading-5">
          <!-- The reveal icon -->
          <button
            type="button"
            @click="passwordVisible = !passwordVisible"
            class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-white"
          >
            <!-- Replace with eye and eye-slash icon from your preferred icons library when passwordVisible is true or false -->
            <span
              x-show="!passwordVisible"
              class="text-xs text-gray-400"
              style="font-size: 10px !important"
              >SHOW</span
            >
            <span
              x-show="passwordVisible"
              class="text-xs text-gray-400"
              style="font-size: 10px !important"
              >HIDE</span
            >
          </button>
          <!-- The copy icon -->
          <!--
                <button type="button"
                    @click="navigator.clipboard.writeText(password).then(() => { console.log('clipboard', password) }, (err) => { console.error('Error in copying text: ', err); })"
                    class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-white ml-3">                    
                    ðŸ“‹
                </button>
            -->
        </div>
      </div>

      <label
        for="auth-oidc-allowed-emails"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >Allowed Emails</label
      >
      <input
        type="text"
        id="auth-oidc-allowed-emails"
        placeholder="Comma separated emails or domains list"
        class="mb-2 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        required
        value=""
      />

      <label
        for="auth-oidc-openai-verification"
        class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
        >OpenAI Verification</label
      >
      <input
        type="text"
        id="auth-oidc-openai-verification"
        placeholder="...Verification Token"
        class="mb-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-md focus:ring-blue-500 focus:border-blue-500 block w-full px-3 py-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
        required
        value=""
      />
    </div>

    <button
      id="auth-save-btn"
      class="agent-save-btn w-full px-4 py-2 text-center text-white transition-colors bg-smyth-emerald-400 hover:opacity-75 rounded-lg focus:outline-none focus:ring focus:ring-emerald-600 focus:ring-offset-2 focus:ring-offset-gray-100"
    >
      Save Settings
    </button>

    <div x-show="(currentAuthTab == 'oauth-oidc')" class="mt-4">
      <h4>Test Authorize Endpoint</h4>
      <input
        type="text"
        id="test-oidc-authorize-ep"
        onClick="this.select();"
        class="select-all mb-4 bg-gray-50 border-0 text-gray-900 rounded-lg block w-full p-0 dark:bg-gray-700 dark:placeholder-gray-400 dark:text-white text-xs"
        readonly
        value=".../authorize"
      />

      <h4>Test Token Endpoint</h4>
      <input
        type="text"
        id="test-oidc-token-ep"
        onClick="this.select();"
        class="select-all mb-4 bg-gray-50 border-0 text-gray-900 rounded-lg block w-full p-0 dark:bg-gray-700 dark:placeholder-gray-400 dark:text-white text-xs"
        readonly
        value=".../authorize"
      />

      <h4>Prod Authorize Endpoint</h4>
      <input
        type="text"
        id="prod-oidc-authorize-ep"
        onClick="this.select();"
        class="select-all mb-4 bg-gray-50 border-0 text-gray-900 rounded-lg block w-full p-0 dark:bg-gray-700 dark:placeholder-gray-400 dark:text-white text-xs"
        readonly
        value=".../authorize"
      />

      <h4>Prod Token Endpoint</h4>
      <input
        type="text"
        id="prod-oidc-token-ep"
        onClick="this.select();"
        class="select-all mb-4 bg-gray-50 border-0 text-gray-900 rounded-lg block w-full p-0 dark:bg-gray-700 dark:placeholder-gray-400 dark:text-white text-xs"
        readonly
        value=".../authorize"
      />
    </div>
  </div>
</div>

