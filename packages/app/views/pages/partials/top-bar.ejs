<ul class="h-menu" id="top-menu">
    <li><input id="agent-name-input" data-role="input" placeholder="Agent Name" data-prepend="Agent"
            data-clear-button="false" />
        <input id="agent-id-input" type="hidden" value="<%= agentId %>" />
    </li>
    <li><a href="#" class="agent-edit-btn"><span class="mif-cog icon" data-role="hint" data-hint-text="Agent Settings"
                data-cls-hint="bg-grayBlue fg-white drop-shadow"></span></a></li>

    <li><a href="#" class="agent-save-btn" data-role="hint" data-hint-text="Save"
            data-cls-hint="bg-grayBlue fg-white drop-shadow"><span class="mif-floppy-disk icon"></span></a></li>
    <li><a href="#" class="agent-load-btn" data-role="hint" data-hint-text="Load Agent"
            data-cls-hint="bg-grayBlue fg-white drop-shadow"><span class="mif-folder-open icon"></span></a></li>
    <li><a href="#" class="agent-create-btn" data-role="hint" data-hint-text="Create New Agent"
            data-cls-hint="bg-grayBlue fg-white drop-shadow"><span class="mif-plus icon"></span></a></li>
    <li><a href="#" class="agent-explain-btn" data-role="hint"
            data-hint-text="Click to explain the current agent workflows"
            data-cls-hint="bg-grayBlue fg-white drop-shadow"><span class="mif-question icon"></span></a></li>
</ul>
<ul class="h-menu" id="debug-menu">
    <li class="right" id="server-status">
        <span class="label">Server Status:</span><span class="status">Unknown</span>
    </li>
    <li class="right separator">&nbsp;</li>
    <li class="right debugger">
        <input type="checkbox" data-role="switch" data-off="off" id="debug-menu-tgl" data-caption="Debug"
            data-caption-position="left">
    </li>
    <li class="right debugger">
        <a href="#" class="debug-btn" id="debug-menubtn-step" disabled>
            <span class="icon">
                <span class="mif-next"></span>
            </span>
            <span class="caption">Step</span>
        </a>
    </li>
    <li class="right debugger">
        <a href="#" class="debug-btn" id="debug-menubtn-stop" disabled>
            <span class="icon">
                <span class="mif-stop"></span>
            </span>
            <span class="caption">stop</span>
        </a>
    </li>
    <li class="right debugger">
        <a href="#" class="debug-btn" id="debug-menubtn-attach" disabled>
            <span class="icon">
                <span class="mif-link"></span>
            </span>
            <span class="caption">attach</span>
        </a>
    </li>

    <li class="right no-debugger">
        <div class="debug-unavailable">
            Debug features unavailable
        </div>
    </li>
</ul>