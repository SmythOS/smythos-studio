<div
  data-role="dialog"
  class="dialog shadow-on rounded-xl flex flex-col"
  style="max-width: 95%; margin: 0 auto; max-height: 90vh"
  id="smyth-dialog-extensions"
  data-close-button="false"
  data-default-action="false"
  data-overlay="false"
  data-width="1400"
>
  <!-- Fixed Header: Title and Close Button (matches input skill modal styling) -->
  <div class="text-[#1E1E1E] pt-4 px-4 flex justify-between items-center flex-none">
    <h2 class="__title text-xl font-semibold">
      <span class="dialog-title">Dialog Title</span>
    </h2>
    <!-- Custom close button matching app design system -->
    <button
      class="js-dialog-close w-8 h-8 p-2 hover:bg-gray-100 rounded-lg transition-colors duration-200 focus:outline-none -mr-2 -mt-2"
      aria-label="Close modal"
    >
      <svg
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M20.7457 3.32851C20.3552 2.93798 19.722 2.93798 19.3315 3.32851L12.0371 10.6229L4.74275 3.32851C4.35223 2.93798 3.71906 2.93798 3.32854 3.32851C2.93801 3.71903 2.93801 4.3522 3.32854 4.74272L10.6229 12.0371L3.32856 19.3314C2.93803 19.722 2.93803 20.3551 3.32856 20.7457C3.71908 21.1362 4.35225 21.1362 4.74277 20.7457L12.0371 13.4513L19.3315 20.7457C19.722 21.1362 20.3552 21.1362 20.7457 20.7457C21.1362 20.3551 21.1362 19.722 20.7457 19.3315L13.4513 12.0371L20.7457 4.74272C21.1362 4.3522 21.1362 3.71903 20.7457 3.32851Z"
          fill="#0F0F0F"
        />
      </svg>
    </button>
  </div>

  <!-- Scrollable Content Area -->
  <div class="dialog-content __content flex-1 flex flex-col overflow-hidden">
    <!-- Fixed Search Field -->
    <div class="extensions__search-field px-4 pt-2 pb-2 flex-none">
      <input
        type="text"
        data-role="input"
        data-search-button="true"
        data-search-button-click="button"
        class="bg-white border text-gray-900 rounded shadow-none block w-full flex outline-none focus:outline-none focus:ring-0 focus:ring-offset-0 focus:ring-shadow-none text-sm font-normal placeholder:text-sm placeholder:font-normal box-border border-gray-300 border-b-gray-500 focus:border-b-2 focus:border-b-blue-500 focus-visible:border-b-2 focus-within:border-b-2 focus-within:border-b-blue-500"
      />
    </div>

    <!-- Scrollable Extensions Container -->
    <div class="extensions__container flex-1 overflow-y-auto px-6">
      <div class="grid"></div>
      <div class="extensions_pagination">
        <button type="button" class="button primary btn-load-more">Load More</button>
      </div>
    </div>

    <!-- Fixed Manual Field Area -->
    <div
      class="extensions__manual-field-area form-box p-4 form-group-text stg-input stg-name flex-none border-t border-gray-200"
    >
      <div class="emf-separator">OR</div>
      <div class="emf-title form-label text-gray-600 text-base capitalize mb-2">
        Add extension manually
      </div>
      <div class="text-right flex">
        <input
          type="text"
          data-role="input"
          class="extensions__resource-key bg-white border text-gray-900 rounded shadow-none block w-full flex outline-none focus:outline-none focus:ring-0 focus:ring-offset-0 focus:ring-shadow-none text-sm font-normal placeholder:text-sm placeholder:font-normal box-border border-gray-300 border-b-gray-500 focus:border-b-2 focus:border-b-blue-500 focus-visible:border-b-2 focus-within:border-b-2 focus-within:border-b-blue-500"
        />

        <button
          type="button"
          class="button primary btn-add-extension-manually px-4 py-1.5 text-white transition-opacity rounded-md w-full sm:w-auto hover:bg-smythos-blue-500 bg-smyth-blue ml-2"
        >
          <!-- <span class="mif-plus light" data-role="btn-icon"></span> -->
          <span class="label">Add</span>
        </button>
      </div>
      <div class="extensions__manual-field-hint pt-2 text-xs">Manual field description</div>
    </div>
  </div>
</div>
