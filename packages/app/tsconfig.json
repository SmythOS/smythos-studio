{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./static/js",
    "rootDir": "./src",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    //"sourceRoot": "./",

    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"], // deprecated (Should be removed)
      "@react/*": ["src/react/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/@types",
    "eslint.config.js",
    "../../../src/react/features/onboarding/constants",
    "../../../src/react/features/onboarding/utils"
  ],
  "exclude": ["node_modules"]
}
