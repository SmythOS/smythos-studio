{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "SmythOS UI Backend",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "cd ${workspaceFolder}/packages/app && pnpm run bundle:backend",
      "program": "${workspaceFolder}/packages/app/dist/server/index.js",
      "outFiles": ["${workspaceFolder}/packages/app/dist/server/**/*.js"],
      "sourceMap": true,
      "outputCapture": "std"
    },

    {
      "type": "node",
      "request": "launch",
      "name": "SmythOS Middleware",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/middleware/dist/index.js",
      "preLaunchTask": "build-middleware",
      "outFiles": ["${workspaceFolder}/packages/middleware/dist/**/*.js"],
      "sourceMaps": true,
      "env": {},
      
      "outputCapture": "std"
    },
    {
      "type": "node",
      "name": "Run standalone .ts script using node -r esbuild-register",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "esbuild-register"],
      "program": "${file}",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
