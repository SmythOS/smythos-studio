{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug UI App (Backend Only)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/app/dist/server/index.js",
      "preLaunchTask": "start-ui-debug",
      "outFiles": ["${workspaceFolder}/packages/app/dist/**/*.js"],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/packages/app",
      "env": {
        "LOCAL_MODE": "true"
      },
      "outputCapture": "std",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "SmythOS Middleware",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/packages/middleware/dist/index.js",
      "preLaunchTask": "build-middleware",
      "outFiles": ["${workspaceFolder}/packages/middleware/dist/**/*.js"],
      "sourceMaps": true,
      "env": {},

      "outputCapture": "std"
    },
    {
      "name": "Launch Runtime Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/runtime/dist/index.dev.cjs",
      "preLaunchTask": "runtime: build:dev",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/packages/runtime/dist/**/*.cjs"],
      "cwd": "${workspaceFolder}/packages/runtime",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "name": "Run standalone .ts script using node -r esbuild-register",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "esbuild-register"],
      "program": "${file}",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
